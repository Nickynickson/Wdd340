    <section class="vehicle-detail">
        <h1>
            <%= vehicle.inv_make %>
                <%= vehicle.inv_model %>
        </h1>
        <div class="vehicle-info">
            <div class="vehicle-image">
                <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
            </div>
            <div class="vehicle-specs">
                <p class="price">Price: $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %>
                </p>
                <p>Year: <%= vehicle.inv_year %>
                </p>
                <p>Mileage: <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles</p>
                <p>Color: <%= vehicle.inv_color %>
                </p>
            </div>
        </div>
        <p class="vehi_desc">Description: <%= vehicle.inv_description %>
        </p>
    </section>